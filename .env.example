# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_application_id_here

# RCON Configuration
RCON_HOST=127.0.0.1
RCON_PORT=25575
RCON_PASSWORD=your_rcon_password_here

# Discord Role IDs for Access Control
ADMIN_ROLE_ID=your_admin_role_id_here
MOD_ROLE_ID=your_mod_role_id_here

# Minecraft Service and Paths
MINECRAFT_SERVICE=minecraft.service
PLUGINS_DIR=/root/minecraft/plugins
LOGS_DIR=/root/minecraft/logs

# Optional: Notification Channel ID
NOTIFICATION_CHANNEL_ID=your_notification_channel_id_here

# Optional: Backup Script Path (for auto-backup before restarts)
BACKUP_SCRIPT=/root/minecraft/scripts/backup.sh

# Required: Webhook for sending Minecraft messages to Discord
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Required: Channel id for sending Discord messages to Minecraft
NOTIFICATION_CHANNEL_ID=your_desired_channel_id

# Mods folder path 
MODS_DIR=/root/minecraft/mods